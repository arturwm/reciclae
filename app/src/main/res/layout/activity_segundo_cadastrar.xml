<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SegundoCadastrar">

    <TextView
        android:id="@+id/tituloCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nEndereço:"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        />

    <EditText
        android:id="@+id/cepCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="CEP"
        />

    <EditText
        android:id="@+id/ruaCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rua"
        />

    <EditText
        android:id="@+id/numeroCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Número"
        />

    <EditText
        android:id="@+id/complementoCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Complemento"
        />

    <EditText
        android:id="@+id/bairroCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bairro"
        />

    <EditText
        android:id="@+id/cidadeCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cidade"
        />

    <EditText
        android:id="@+id/estadoCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estado"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:onClick="voltar"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Confirmar"
            android:onClick="confirmarCadastro"
            />
    </LinearLayout>

</LinearLayout>